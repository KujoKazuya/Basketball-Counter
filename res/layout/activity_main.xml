<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.basketballcounter.MainActivity"
    android:background="#F49E36"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F49E36"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56sp"
                android:text="0"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                />
            <Button
                android:id="@+id/a_score_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAPlusTwo"
                android:text="+2 point(s)"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/a_score_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAPlusThree"
                android:text="+3 point(s)"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/a_score_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAPlusOne"
                android:text="free throw"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56sp"
                android:text="0"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                />
            <Button
                android:id="@+id/b_score_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBPlusTwo"
                android:text="+2 point(s)"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/b_score_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBPlusThree"
                android:text="+3 point(s)"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/b_score_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBPlusOne"
                android:text="free throw"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#FFFFFF"
                android:background="#AF401B"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#F49E36"
        >
        <Button
            android:id="@+id/score_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="scoreReset"
            android:text="Reset Score"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:textColor="#FFFFFF"
            android:background="#AF401B"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"

        >
        <ImageView
            android:src="@drawable/akzkryo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

</LinearLayout>
